{{#if attrs.waveStarted}}
  <div>
    {{inputValue}}
  </div>
{{else}}
  {{input class="block__input"
          enter=(action "handleInputEnter")
          focusIn=(action "selectUnit")
          focusOnInsert=(readonly focusNewInput)
          key-up=(action "handleKeyUp")
          value=(readonly inputValue)
          viewName=(readonly inputViewName)}}
{{/if}}
